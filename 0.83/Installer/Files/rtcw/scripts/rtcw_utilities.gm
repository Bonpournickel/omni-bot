member AddBotTester = function( team, class, name )
{
	// Add Tester bot
	sleep( 1 );
	AddBot( team, class, name );
	sleep( 1 );

	bot = Util.GetBotByName( name );
	ent = bot.GetGameEntity();

	while ( !Util.GetEntHealth(ent) )
	{
		sleep( 1 );
	}

	return bot;
};

