member RandomSpawn = function( team, spawn )
{
	foreach( bot in BotTable )
	{
		if ( !bot.ChangedSpawn && bot.GetTeam() == team ) {
			if ( RandInt( 0,9 ) < 5 ) {
				bot.ChangeSpawnPoint( spawn );
				bot.ChangedSpawn = true;
			}
		}
	}
};

